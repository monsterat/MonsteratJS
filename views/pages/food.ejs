    <!-- Add meal modal -->
  
    <div class="modal fade" id="addMealModal" tabindex="-1" role="dialog" aria-labelledby="addMealModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="modalLabel">Add Meal</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <div class="modal-body">
              <form>
                  <div class="form-row">
                      <div class="form-group col-md-6">
                          <input  id="inputMealName1" type="text" class="form-control" placeholder="Meal">
                        </div>
                        <div class="form-group col-md-6">
                           
                          <input type="number" min="0" class="form-control" id="inputMealServings" placeholder="Servings">
                        </div>
                        <div class="form-group col-md-6">
                          <input type="date" class="form-control" id="inputDate" placeholder="Date">
                        </div>
                        <div class="form-group col-md-6">
                          <input type="number" class="form-control" id="inputCalories" placeholder="Calories">
                        </div>
                        <div class="form-group col-md-6">
                          <input type="number" class="form-control" id="inputProtein" placeholder="Protein">
                        </div>
                        <div class="form-group col-md-6">
                          <select id="mealTypeDropdown" class="custom-select" required>
                            <option value="" selected disabled>Meal Type</option>
                            <option value="Breakfast">Breakfast</option>
                            <option value="Lunch">Lunch</option>
                            <option value="Dinner">Dinner</option>
                          </select>
                        </div>
                    </div>
                </form>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
              <button id="addMealButton" type="button"  data-dismiss="modal"type="submit" onclick="myFunction()" class="btn btn-primary">Submit</button>
          </div>
          </div>
      </div>
    </div>

